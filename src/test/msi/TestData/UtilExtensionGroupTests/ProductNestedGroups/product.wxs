        </util:Group>
        <util:Group Id="POWER_USERS" Name="Power Users" >
            <util:GroupRef Id="TEST_GROUP1" />
        </util:Group>

        <Component Id="Component1" Guid="09624A9A-4BBC-4126-BBF9-0713C5217DB1" Directory="INSTALLFOLDER">
